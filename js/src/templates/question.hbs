<div class="full-relative">
    <div class="copy">
        {{copy}}
    </div>

    <div class="options clearfix">
        {{#each options}}
            <div class="option">
                <div class="full-relative">
                    <div class="empty-space"></div>
                    <div class="content">
                        <input type="radio" name="{{../name}}" value="{{value}}" id="{{value}}" onclick=""/>
                        <label for="{{value}}" class="full-relative" onclick=""></label>
                        <div class="background"></div>
                        <div class="text">{{text}}</div>
                        <div class="box-shadow"></div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>